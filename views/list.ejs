<%- include("header") -%>
<body>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
   
    <div class="box">
    <% newListItems.forEach(function(ele){ %>
        <form action="/delete" method="post">       
        <div class="item">
        <input name="checkbox" type="checkbox" value="<%= ele._id %>" onChange="this.form.submit()">
        <p><%= ele["name"] %></p>
    </form>
    </div>
   <% }); %>
    </div>
   
<form  action="/" method="post">
    <input type="text" name="newItem" placeholder="Add a new task" autocomplete="off">
    <button type="submit" name="list" value=<%= listTitle %>>Add</button>
</form>
</body>

