        <h1><%= listTitle %></h1>
    </div>
   
    <div class="box">
    <% for(var i=0;i<newListItems.length;i++){ %>
        <div class="item">
        <input type="checkbox">
        <p><%= newListItems[i] %></p>
    </div>
   <% } %>
    </div>
   
